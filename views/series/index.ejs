<%- include('../partials/header') %>

<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Series</h2>
        <p class="lead">Todas as séries</p>
        <a href="/series/new" class='btn btn-info'>Nova série</a>
        <table class="table table-hover">
          <% series.forEach(serie => { %>
            <tr>
              <td>
                <%= serie.name%>
              </td>
              <td>
                <%= serie.status%>
              </td>
              <td>
                <a href="/series/remove/<%= serie._id %>" type="button">Excluir</a>
              </td>
            </tr>
          <% }) %> 
        </table>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
